{
	"name": "vscode-tye",
	"displayName": "Tye",
	"description": "Makes it easy to debug and interact with applications using Tye.",
	"version": "0.0.1",
	"preview": true,
	"publisher": "ms-azuretools",
	"license": "SEE LICENSE IN LICENSE.txt",
	"homepage": "https://github.com/Microsoft/vscode-tye/",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:vscode-tye.views.services"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "vscode-tye.views.services",
				"contents": "The extension requires you to run Tye in a command window. This extension will attempt to access `http://localhost:8000/api/v1/services` by default."
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "tye-explorer",
					"title": "Tye Explorer",
					"icon": "resources/dep.png"
				}
			]
		},
		"views": {
			"tye-explorer": [
				{
					"id": "vscode-tye.views.services",
					"name": "Tye Services"
				}
			]
		},
		"commands": [
			{
				"command": "vscode-tye.commands.refreshEntry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "vscode-tye.commands.debugAll",
				"title": "Debug",
				"icon": "$(debug)"
			},
			{
				"command": "vscode-tye.commands.browseService",
				"title": "Browse",
				"icon": "$(browser)"
			},
			{
				"command": "vscode-tye.commands.attachService",
				"title": "Attach",
				"icon": "$(debug)"
			},
			{
				"command": "vscode-tye.commands.showLogs",
				"title": "Logs",
				"icon": "$(file-text)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "vscode-tye.commands.refreshEntry",
					"when": "view == vscode-tye.views.services",
					"group": "navigation"
				},
				{
					"command": "vscode-tye.commands.debugAll",
					"when": "view == vscode-tye.views.services",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "vscode-tye.commands.browseService",
					"when": "view == vscode-tye.views.services && viewItem =~ /browsable/",
					"group": "inline"
				},
				{
					"command": "vscode-tye.commands.attachService",
					"when": "view == vscode-tye.views.services && viewItem =~ /attachable/",
					"group": "inline"
				},
				{
					"command": "vscode-tye.commands.showLogs",
					"when": "view == vscode-tye.views.services && viewItem =~ /hasLogs/",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/fs-extra": "^8.1.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.12.54",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"fs-extra": "^8.1.0",
		"vscode-nls": "^5.0.0"
	}
}
